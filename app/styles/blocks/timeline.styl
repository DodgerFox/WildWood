.timeline
  width 40%
  border-right 1px solid #b3b3b3

  &-body
    padding 0 40px
    padding-top 40px
    display flex
    flex-direction column
    align-items center
    width 100%

  .post
    width 100%
    max-width 600px
    min-height 185px
    background-color #fff7e1
    position relative
    padding 35px 28px
    display flex
    flex-direction column
    justify-content space-between
    &:after
      content ''
      position absolute
      bottom -8px
      left 15px
      right 15px
      height 30px
      // background-color #fbf2db
      z-index -1

    &-title
      font-size 22px
      font-weight 600
      letter-spacing 1.1px
      line-height 31px

    &-info
      display flex

      &__item
        font-size 12px
        font-weight 500
        color #22212c

.search
  height 50px
  width 100%
  background-color #fff7e1
